<%- include('partials/header') -%>
<h1>Compose</h1>

<form action="/compose" method="POST">
<div class="form-group">
    <label for="title">Title</label>
    <input name="title" type="text" class="form-control" id="title" placeholder="Post Title">
</div>
<div class="form-group">
    <label for="textarea">Post</label>
    <textarea name="content" class="form-control" id="textarea" rows="3"></textarea>
</div>
<button class="btn btn-lg btn-info" type="submit">Publish</button>
</form>
<%- include('partials/footer') -%>